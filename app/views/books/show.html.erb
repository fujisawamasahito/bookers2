<div>

 <%= link_to "/users/#{@book.user.id}" do %>
    <%= image_tag @book.user.get_profile_image(100,100) %>
  <% end %>
  
  <p><%= link_to @book.title, book_path(@book.id) %></p>
  <p>説明：<%= @book.body %></p>


<p><%= link_to @book.user.name, "/users/#{@book.user.id}" %></p>


