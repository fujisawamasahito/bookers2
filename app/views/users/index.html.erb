<div class="main container ">
  <div class="row">

<div class="col-md-3">

     <div class=userinfo>
       <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
  <tbody>

  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody>
</table>

 <% if @user == current_user %>
  <div class="row">
     <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
 <i class="fas fa-user-cog"></i>
    <% end %>
    </div>

  <% end %>

<!--userinfoの終了タグ-->
     </div>


<div　class=newbook>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<!--colの終了-->


<!--sidebar-->



<div class=col-md-offset-1>
  <div class=brank></div>
</div>



<div class="col-md-8 offset-md-1">
  <!--ここから置き換え-->
  <h2>Users</h2>

  <table class=table>
    <thred>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thred>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td>
         <p><%= user.name %></p>
          </td>
        <td>
        <p><%= link_to "Show", user_path(user.id) %></p>
          </td>

      </tr>
       <% end %>
    </tbody>
  </table>


<!--ここまで置き換え-->
</div>

<!--row-->
</div>
<!--main container-->
</div>





