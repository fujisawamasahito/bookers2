<main>
<div class="container px-5 pz-sm-0">
  <div class="row">
    
     <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
  <tbody>

  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody>
</table>




  <% if @user == current_user %>
  <button class="fa-solid fa-user-gear" style="color: #707070;"><%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block" %></button>



  <% end %>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
</div>

</div>
</div>
</main>